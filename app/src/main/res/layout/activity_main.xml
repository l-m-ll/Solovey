<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/settings_btn"
            android:layout_width="90dp"
            android:layout_height="48dp" android:id="@+id/settings"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/playList" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/player" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="@string/player_btn"
            android:layout_width="88dp"
            android:layout_height="48dp" android:id="@+id/player"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp" android:layout_marginStart="161dp"
            android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/settings" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="242dp" app:layout_constraintVertical_bias="0.84000003"/>
    <Button
            android:text="@string/playList_btn"
            android:layout_width="90dp"
            android:layout_height="48dp" android:id="@+id/playList"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="135dp" android:layout_marginStart="135dp"
            android:layout_marginEnd="121dp"
            android:layout_marginRight="121dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.384" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/settings" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="307dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>