<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity_play">

    <ImageView
            android:layout_width="214dp"
            android:layout_height="179dp" app:srcCompat="@drawable/vinyl" android:id="@+id/vinyl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.291"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            tools:ignore="VectorDrawableCompat"/>
    <ImageView
            android:layout_width="96dp"
            android:layout_height="81dp"
            android:id="@+id/pause"
            android:background="@drawable/ic_baseline_pause_24"
            android:onClick="clickPlayBtn"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.781" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" tools:ignore="VectorDrawableCompat"/>
    <ImageView
            android:layout_width="94dp"
            android:layout_height="76dp" app:srcCompat="@drawable/ic_baseline_skip_next_24"
            android:id="@+id/gofor"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.861" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.775"
            tools:ignore="VectorDrawableCompat"/>
    <ImageView
            android:layout_width="94dp"
            android:layout_height="76dp" app:srcCompat="@drawable/ic_baseline_skip_previous_24"
            android:id="@+id/goback"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.782" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.088"
            tools:ignore="VectorDrawableCompat"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="268dp"
            android:layout_height="53dp"
            android:max="10"
            android:progress="3"
            android:id="@+id/timeBar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.57"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  tools:ignore="MissingConstraints"/>
         <TextView
                 android:text="TextView"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" android:id="@+id/elapsedTime" tools:layout_editor_absoluteY="460dp"
                 tools:layout_editor_absoluteX="43dp" tools:ignore="MissingConstraints"/>
         <TextView
                 android:text="TextView"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" android:id="@+id/leftTime" tools:layout_editor_absoluteY="462dp"
                 tools:layout_editor_absoluteX="278dp" tools:ignore="MissingConstraints"/>
                  />

</androidx.constraintlayout.widget.ConstraintLayout>